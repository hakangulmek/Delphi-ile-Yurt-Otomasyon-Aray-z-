unit Unit8;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Buttons, Vcl.Imaging.jpeg,
  Vcl.ExtCtrls, Vcl.StdCtrls, Vcl.Imaging.pngimage;

type
  TForm8 = class(TForm)
    Image1: TImage;
    SpeedButton1: TSpeedButton;
    Label1: TLabel;
    GroupBox1: TGroupBox;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Timer1: TTimer;
    Edit1: TEdit;
    Label2: TLabel;
    Image2: TImage;
    procedure SpeedButton1Click(Sender: TObject);
    procedure Timer1Timer(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form8: TForm8;
  dakika,saniye:Integer;
  saat:Integer;

implementation

{$R *.dfm}

uses Unit3;

procedure TForm8.Button1Click(Sender: TObject);
begin
Timer1.Enabled:= true;
end;

procedure TForm8.Button2Click(Sender: TObject);
begin
saniye:= 0;
dakika:= 0;
saat:= 0;
edit1.Text:= IntToStr(saat) +  ' | ' + IntToStr(dakika) + ' | ' + IntToStr(saniye);
end;

procedure TForm8.Button3Click(Sender: TObject);
begin
Timer1.Enabled:= False;
end;

procedure TForm8.SpeedButton1Click(Sender: TObject);
begin
Form3.show;
Form8.Close;
end;

procedure TForm8.Timer1Timer(Sender: TObject);
begin
saniye:=saniye+1;
if saniye=60 then
begin
  saniye:=0;
  dakika:=dakika+1;
end
else if dakika=60 then
     begin
       dakika:=0;
       saat:=saat+1;
     end;

edit1.Text:=IntToStr(saat) +  ' | ' + IntToStr(dakika) + ' | ' + IntToStr(saniye);

end;

end.
